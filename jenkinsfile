pipeline {
    agent {
        label 'maven'
    }

    tools {

        maven "mvn"
    }

    stages {
        stage('git checkout') {
            steps {

                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/sunny-class/jenkins.git'
            }
        }
        stage('test') {
            steps {
                sh 'mvn clean test'
            }
        }
        stage ('build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage ('tomcat') {
            steps {
                deploy adapters: [tomcat9(path: '', url: 'http://65.2.128.197:8080/')], contextPath: null, war: '**/*.war'
            }
        }
    }
    post {
        success {
            mail to: 'rockzs220@gmail.com',
                 subject: "SUCCESS: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                 body: "Build succeeded!\n\nCheck: ${env.BUILD_URL}"
        }
        failure {
            mail to: 'rockzs220@gmail.com',
                 subject: "FAILURE: ${env.JOB_NAME} #${env.BUILD_NUMBER}",
                 body: "Build failed.\n\nCheck: ${env.BUILD_URL}"
        }
    }
}
